+static gchar *
+getClientPidPath (Client *c)
+{
+    gchar *exepath = NULL;
+    gchar *procpath;
+
+    if (c->pid > 0)
+    {
+        procpath = g_strdup_printf ("/proc/%d/exe", c->pid);
+        // readlink 会返回软链接指向的真实绝对路径
+        exepath = g_file_read_link (procpath, NULL);
+        g_free (procpath);
+    }
+    return exepath; // 如果失败返回 NULL
+}
+
+static gchar *
+getSafeFileNameFromPath (const gchar *path)
+{
+    if (!path) return g_strdup ("unknown.txt");
+
+    // 将路径中的 '/' 替换为 '_'
+    // 例如 /usr/bin/firefox -> _usr_bin_firefox.txt
+    gchar *safe_name = g_strdup (path);
+    g_strdelimit (safe_name, "/", '_');
+
+    gchar *filename = g_strdup_printf ("%s.txt", safe_name);
+    g_free (safe_name);
+    return filename;
+}
